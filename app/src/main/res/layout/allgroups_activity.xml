<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="Status:"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/relativeLayout">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text="Group ID"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text="Group Name"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text="Status"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:gravity="center"
                android:text="Operation" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/groupid1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/groupname1"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/groupstatus1"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <Button
                android:id="@+id/groupjoin1"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@android:color/holo_green_dark"
                android:text="" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="140dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/groupid2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/groupname2"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/groupstatus2"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <Button
                android:id="@+id/groupjoin2"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@android:color/holo_green_dark"
                android:text="" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="210dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/groupid3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/groupname3"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/groupstatus3"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <Button
                android:id="@+id/groupjoin3"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@android:color/holo_green_dark"
                android:text="" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="280dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/groupid4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/groupname4"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/groupstatus4"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <Button
                android:id="@+id/groupjoin4"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@android:color/holo_green_dark"
                android:text="" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="All Groups"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/logff"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="Log off"
        android:textSize="30dp"
        android:background="@android:color/holo_green_dark"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true" />

</RelativeLayout>